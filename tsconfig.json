{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6"
    ],
    "types": [
      "reflect-metadata"
    ],
    "rootDir": ".",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true
  }
}